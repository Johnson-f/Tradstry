# Environment Configuration for Tradstry Backend

# Server Configuration
RUST_LOG=info
PORT=9000
RUST_ENV=production
ALLOWED_ORIGINS=https://tradstry.com,http://localhost:3000

# Turso Database Configuration
REGISTRY_DB_URL=your-registry-database-url
REGISTRY_DB_TOKEN=your-registry-db-token
TURSO_API_TOKEN=your-turso-api-token
TURSO_ORG=your-turso-organization

# Supabase Configuration
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-supabase-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key

# Legacy Clerk Configuration (optional, for migration)
CLERK_WEBHOOK_SECRET=your-clerk-webhook-secret

# Google OAuth Configuration
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=https://your-domain.com/api/auth/callback/google

# Cron Configuration
CRON_SECRET=your-cron-secret

# Vector Database Configuration (Upstash)
UPSTASH_VECTOR_REST_URL=https://your-vector-db.upstash.io
UPSTASH_VECTOR_REST_TOKEN=your-upstash-vector-token

# OpenRouter Configuration
OPENROUTER_API_KEY=your-openrouter-api-key
OPENROUTER_MODEL=deepseek/deepseek-chat-v3.1:free
OPENROUTER_SITE_URL=https://tradstry.com
OPENROUTER_SITE_NAME=Tradstry Trading Platform

# Google Gemini Configuration (optional - alternative to OpenRouter)
GEMINI_API_KEY=your-gemini-api-key
GEMINI_MODEL=gemini-2.0-flash-exp
GEMINI_API_URL=https://generativelanguage.googleapis.com/v1beta
GEMINI_MAX_RETRIES=3
GEMINI_TIMEOUT_SECONDS=60
GEMINI_MAX_TOKENS=4096
GEMINI_TEMPERATURE=0.7

# Model Selector Configuration
GEMINI_PRIORITY=true
OPENROUTER_FALLBACK_MODELS=x-ai/grok-4.1-fast:free,deepseek/deepseek-r1:free,kwaipilot/kat-coder-pro:free
MODEL_FALLBACK_ENABLED=true
MAX_FALLBACK_ATTEMPTS=3

# SnapTrade Service Configuration
# For Docker: use service name (http://snaptrade-service:8080)
# For local development: use localhost (http://localhost:8080)
SNAPTRADE_SERVICE_URL=http://snaptrade-service:8080

