# Turso Configuration
# Central registry database (main Turso database for storing user database mappings)
REGISTRY_DB_URL=libsql://your-registry-db-name.turso.io
REGISTRY_DB_TOKEN=your-registry-db-token-here

# Turso API Configuration (for creating new databases)
TURSO_API_TOKEN=your-turso-api-token-here
TURSO_ORG=your-turso-organization-name

# Supabase Configuration
SUPABASE_URL=https://your-project-id.supabase.co
SUPABASE_ANON_KEY=your-supabase-anon-key-here
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key-here

# Legacy Clerk Configuration (remove after migration)
# CLERK_WEBHOOK_SECRET=your-clerk-webhook-signing-secret-here

# Google credentials 
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_REDIRECT_URI=http://localhost:3000/api/auth/callback/google

# Cron job
CRON_SECRET=random_string

# Server Configuration
PORT=9000
RUST_LOG=debug
