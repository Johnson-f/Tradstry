# Multi-stage build for production Rust backend
FROM rust:1.80-bookworm AS builder

# Install system dependencies
RUN apt-get update && apt-get install -y \
    pkg-config \
    libssl-dev \
    ca-certificates \
    && rm -rf /var/lib/apt/lists/*

WORKDIR /app

# === Dependency Caching ===
COPY backend/Cargo.toml backend/Cargo.lock ./

# Build dummy to cache deps
RUN mkdir -p src && \
    echo 'fn main() { println!("dummy"); }' > src/main.rs && \
    cargo build --release && \
    rm -rf src

# === Build Real App ===
COPY backend/src ./src
# Touch to force rebuild (optional, but safe)
RUN touch src/main.rs
RUN cargo build --release

# === Runtime Stage ===
FROM debian:bookworm-slim

# Install runtime deps
RUN apt-get update && apt-get install -y \
    ca-certificates \
    libssl3 \
    curl \
    && rm -rf /var/lib/apt/lists/* \
    && apt-get clean

# Create non-root user
RUN groupadd -r appuser && \
    useradd -r -g appuser -m appuser

WORKDIR /app

# Copy binary and config
COPY --from=builder /app/target/release/tradstry-backend /app/tradstry-backend
COPY backend/.env.production /app/.env

# Permissions
RUN chmod +x /app/tradstry-backend && \
    chown -R appuser:appuser /app

USER appuser

# Environment
ENV RUST_LOG=info \
    PORT=8080 \
    HOST=0.0.0.0 \
    RUST_BACKTRACE=1

EXPOSE 8080

HEALTHCHECK --interval=30s --timeout=3s --start-period=5s --retries=3 \
    CMD curl -f http://localhost:8080/health || exit 1

CMD ["./tradstry-backend"]